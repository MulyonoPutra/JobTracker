// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")

  relationMode = "prisma"
}

model user {
    id           String   @id @default(uuid())
    email        String   @unique(map: "User_email_key")
    name         String?
    password     String?
    avatar       String?
    activity     activity[]
}

model activity {
    id            String   @id @default(uuid())
    companyName   String
    position      String
    location      String
    jobType       String
    status        String
    appliedOn     String
    jobPosted     String
    categoryId    String
    userId        String

    category      category? @relation(fields: [categoryId], references: [id])
    user          user?     @relation(fields: [userId], references: [id])


    @@index([categoryId])
    @@index([userId])
}

model category {
    id            String @id @default(uuid())
    name          String
    activity      activity[]
}